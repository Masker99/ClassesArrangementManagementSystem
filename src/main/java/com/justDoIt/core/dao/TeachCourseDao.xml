<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper
        PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
        "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.justDoIt.core.dao.TeachCourseDao">
    <select id="findTeachCourseById" parameterType="int" resultType="TeacherCourse">
        select * from teach_course where teacher_id = #{teacher_id}
    </select>

    <select id="findAllTeachCourse" resultType="TeacherCourse">
        select * from teach_course where school_year = #{school_year} and semester = #{semester}
    </select>
</mapper>